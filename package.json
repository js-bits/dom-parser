{
  "name": "@js-bits/dom-parser",
  "version": "0.1.0",
  "description": "Cross-environment (nodejs/web) DOM parser for XML and HTML",
  "keywords": [
    "javascript",
    "xml",
    "html",
    "dom",
    "parser",
    "web",
    "node",
    "browser"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "default": "./index.js"
    }
  },
  "scripts": {
    "build": "rimraf ./dist && rollup ./index.js --format cjs --file dist/index.cjs --exports default",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test-cjs": "jest --verbose",
    "test-coverage": "yarn test --coverage",
    "test-watch": "yarn test --watch",
    "lint": "eslint '**/*.{js,jsx}'",
    "prepare": "husky install"
  },
  "browser": {
    "jsdom": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js-bits/dom-parser"
  },
  "author": "https://github.com/apolo-gh",
  "license": "ISC",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "jsdom": "^16.6.0"
  },
  "devDependencies": {
    "@js-bits/formalinter": "^0.1.2",
    "@js-bits/log-in-color": "^0.0.2",
    "@types/jest": "29.4.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.24.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testEnvironment": "node"
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom"
      }
    ]
  },
  "prettier": "@js-bits/formalinter/.prettierrc.json",
  "eslintConfig": {
    "extends": "@js-bits/eslint-config/.eslintrc.json"
  }
}
